{
	"name": "crypto-provider",
	"version": "0.0.1",
	"description": "Provides cryptographic operations",
	"browser": "dist/BrowserCryptoProvider.js",
	"main": "dist/NodeCryptoProvider.js",
	"scripts": {
		"build": "npm run build:node && npm run build:browser",
