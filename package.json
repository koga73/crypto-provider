		"test": "mocha tests/test.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/koga73/crypto-provider.git"
	},
	"keywords": [
		"encrypt",
		"decrypt",
		"aes"
	],
	"author": "AJ Savino",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/koga73/crypto-provider/issues"
	},
	"homepage": "https://github.com/koga73/crypto-provider#readme",
	"devDependencies": {
		"@babel/cli": "^7.10.5",
		"@babel/core": "^7.11.4",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-transform-modules-umd": "^7.10.4",
		"@babel/preset-env": "^7.11.0",
		"chai": "^4.2.0",
		"copyfiles": "^2.4.1",
		"mocha": "^8.1.1"
	}
}
